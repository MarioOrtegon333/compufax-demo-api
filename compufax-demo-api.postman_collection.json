{
  "info": {
    "name": "compufax-demo-api",
    "description": "Colección para probar clientes, direcciones y ordenes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Clientes",
      "item": [
        {
          "name": "Listar clientes",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/clientes", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["clientes"] }
          }
        },
        {
          "name": "Obtener cliente por ID",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/clientes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["clientes", "1"] }
          }
        },
        {
          "name": "Crear cliente",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"nombre\":\"Juan\",\"apellido\":\"Pérez\",\"edad\":30,\"email\":\"juan@example.com\",\"fecha_registro\":\"2025-09-28\"}" },
            "url": { "raw": "http://localhost:3000/clientes", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["clientes"] }
          }
        },
        {
          "name": "Actualizar cliente",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"nombre\":\"Juan\",\"apellido\":\"Pérez\",\"edad\":31,\"email\":\"juan@example.com\",\"fecha_registro\":\"2025-09-28\"}" },
            "url": { "raw": "http://localhost:3000/clientes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["clientes", "1"] }
          }
        },
        {
          "name": "Eliminar cliente",
          "request": {
            "method": "DELETE",
            "url": { "raw": "http://localhost:3000/clientes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["clientes", "1"] }
          }
        }
      ]
    },
    {
      "name": "Direcciones",
      "item": [
        {
          "name": "Listar direcciones",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/direcciones", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["direcciones"] }
          }
        },
        {
          "name": "Obtener dirección por ID",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/direcciones/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["direcciones", "1"] }
          }
        },
        {
          "name": "Crear dirección",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"cliente_id\":1,\"calle\":\"Av. Principal\",\"ciudad\":\"Ciudad\",\"codigo_postal\":\"12345\"}" },
            "url": { "raw": "http://localhost:3000/direcciones", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["direcciones"] }
          }
        },
        {
          "name": "Actualizar dirección",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"cliente_id\":1,\"calle\":\"Av. Secundaria\",\"ciudad\":\"Ciudad\",\"codigo_postal\":\"54321\"}" },
            "url": { "raw": "http://localhost:3000/direcciones/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["direcciones", "1"] }
          }
        },
        {
          "name": "Eliminar dirección",
          "request": {
            "method": "DELETE",
            "url": { "raw": "http://localhost:3000/direcciones/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["direcciones", "1"] }
          }
        }
      ]
    },
    {
      "name": "Ordenes",
      "item": [
        {
          "name": "Listar ordenes",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/ordenes", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes"] }
          }
        },
        {
          "name": "Obtener orden por ID",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/ordenes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes", "1"] }
          }
        },
        {
          "name": "Crear orden (folio y múltiples productos)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cliente_id\": 1,\n  \"items\" : [\n    {\n      \"producto\": \"Producto Laptop\",\n      \"cantidad\": 2\n    },\n    {\n      \"producto\": \"Producto Notebook\",\n      \"cantidad\": 2\n    },\n    {\n      \"producto\": \"Producto Xbox\",\n      \"cantidad\": 2\n    }\n  ]\n}"
            },
            "url": { "raw": "http://localhost:3000/ordenes", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes"] }
          }
        },
        {
          "name": "Actualizar orden",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"cliente_id\":1,\"producto\":\"Laptop\",\"cantidad\":3,\"folio\":\"A123\"}" },
            "url": { "raw": "http://localhost:3000/ordenes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes", "1"] }
          }
        },
        {
          "name": "Eliminar orden",
          "request": {
            "method": "DELETE",
            "url": { "raw": "http://localhost:3000/ordenes/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes", "1"] }
          }
        },
        {
          "name": "Buscar ordenes por folio",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:3000/ordenes/folio/TEST123456", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["ordenes", "folio", "TEST123456"] }
          }
        }
      ]
    }
  ]
}
